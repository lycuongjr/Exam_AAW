<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <constant name="struts.action.extension" value="html"/>
    <package name="studentPackage" extends="struts-default">
        <action name="create" class="com.action.CustomerAction" method="create">
            <result name="input">/admin/form.jsp</result>
        </action>
        <action name="store" class="com.action.CustomerAction" method="store">
            <result name="success">/admin/detail.jsp</result>
        </action>
    </package>
</struts>